{
    "compilerOptions": {
        "baseUrl": "./",
        "checkJs": false,
        "paths": {
            "@app/*": ["app/*"],
            "@config/*": ["config/*"],
            "@exception/*": ["app/Exceptions/*"],
            "@helper/*": ["app/Helpers/*"],
            "@models/*": ["app/models/*"],
            "@utils/*": ["app/utils/*"],
            "@controllers/*": ["app/controllers/*"],
            "@preload/*": ["public/js/preloads/*"],
            "@routes/*": ["routes/*"]
        }
    },
  "include": ["app/**/*", "public/js/**/*"]
}
